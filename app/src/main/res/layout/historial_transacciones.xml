<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/veinteDP"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="10dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

               <LinearLayout
                   android:id="@+id/line1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_margin="4dp"
                   >
                   <TextView
                       android:id="@+id/txtOrigen"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/origenTransaccion"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       />

                   <TextView
                       android:id="@+id/tvOrigen"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_toRightOf="@id/txtOrigen"
                       android:text="7665 7878: "
                       android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                       android:textColor="@color/azulito" />

                   <TextView
                       android:layout_marginTop="10dp"
                       android:id="@+id/txtDestino"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/destinoTransaccion"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       />

                   <TextView
                       android:id="@+id/tvDestino"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_toRightOf="@id/txtDestino"
                       android:text="7665 7878: "
                       android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                       android:textColor="@color/azulito" />

                   <TextView
                       android:layout_marginTop="10dp"
                       android:id="@+id/txtConcepto"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/conceptoTransaccion"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       />

                   <TextView
                       android:id="@+id/tvConcepto"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_toRightOf="@id/txtDestino"
                       android:text="Pago por cable"
                       android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                       android:textColor="@color/azulito" />
               </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:text="@string/fechaCreacion"/>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/tvFecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="2021-08-26 03:03:22"
                        android:textAlignment="center"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/azulito" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:text="@string/montoTransaccion"/>

                    <TextView
                        android:id="@+id/tvMonto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="1000"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/red" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
</LinearLayout>