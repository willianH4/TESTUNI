<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.transferencias.DestinatarioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvCuentaOrigenSeleccionada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/azulito"
            android:textSize="@dimen/textoTerminos"
            android:text="Elige tu cuenta de origen" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight=".28"
            android:background="@drawable/style_spinner"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spCuentas"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cuarentayochoDP"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:entries="@array/cuentas"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_gravity="center"
                android:src="@drawable/down_filled_triangular_arrow" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tvTexto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/azulito"
            android:textSize="@dimen/textoTerminos"
            android:text="Elige el destinatario" />

        <SearchView
            android:id="@+id/svBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

